@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data" asp-controller="Manage" asp-action="Index">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
        {
            <div class="input-group">
                <input asp-for="Email" class="form-control" />
                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
            </div>
}
else
{
        <input asp-for="Email" class="form-control" />
        <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
}
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                Appear In
                <input asp-for="Skype" class="form-control" />
                <span asp-validation-for="Skype" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Biography"></label>
                <textarea asp-for="Biography" class="form-control" cols="40" rows="5"></textarea>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label> Upload Avatar</label>
                <input asp-for="Image" type="file" class="form-control" />

            </div>

            <div class="form-group">
                <label> <br />Upload Certificat</label>
                <input asp-for="Sertificat" type="file" class="form-control" />
                <button type="submit" class="btn btn-default">Add sertificat</button>
            </div>

            <button type="submit" class="btn btn-default">Save</button>
        </form>

        @*<form method="post" enctype="multipart/form-data" asp-controller="Manage" asp-action="UploadCertificat">
            <div class="form-group">
                <label> <br />Upload Certificat</label>
                <input asp-for="Image" type="file" class="form-control" />
                <button type="submit" class="btn btn-default">Add Certificat</button>
            </div>
        </form>*@

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
